<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_item"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="标题"
            android:layout_alignTop="@id/iv_item"
            android:textColor="#000"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_item"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="新闻来源"
            android:layout_alignBottom="@id/iv_item"
            android:textColor="#b2a7a7"
            android:textSize="20sp"
            />

        <FrameLayout
            android:id="@+id/fl_item"
            android:layout_alignBottom="@id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/tv_stopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b2a7a7"
                android:text="专题"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_commons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b2a7a7"
                android:text="评论数/12222"/>

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>